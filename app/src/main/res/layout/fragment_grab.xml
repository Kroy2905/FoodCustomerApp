<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"



    tools:context=".ui.Fragments.grabs.GrabFragment">

    <ScrollView
        android:paddingHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/whatwouldyorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/app_font1_bold"



                    android:text="Let's Grab food"

                    android:textColor="@color/primaryColor"
                    android:textSize="30sp"

                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.006"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
        />

                <TextView
                    android:id="@+id/letsgrabtext"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    android:text="With..."

                    android:textColor="@color/primaryColor"
                    android:textSize="25sp"
                    android:fontFamily="@font/app_font1_bold"

                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/whatwouldyorder" />

                <TextView
                    android:id="@+id/withgrabberstext"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/app_font1_bold"

                    android:text="Grabbers"

                    android:textColor="@color/primaryDarkColor"
                    android:textSize="32sp"

                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/letsgrabtext" />


                <TextView
                    android:id="@+id/whatsnewtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:text="What's New?"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/app_font1_bold2"
                    android:letterSpacing="0.08"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/withgrabberstext"
                    tools:layout_editor_absoluteX="218dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/whatsnew_recyclerview"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:clipToPadding="false"


                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/whatsnewtext"


                    />




                                <TextView
                                    android:id="@+id/nearbyrestauranttext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="10dp"
                                    android:text="Nearby Restaurants"
                                    android:textColor="@color/black"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/bestoffer_recyclerview"
                                    tools:layout_editor_absoluteX="218dp" />

                                <TextView
                                    android:id="@+id/nearbyrestaurant_seemoretext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="10dp"

                                    android:text="See more"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="@+id/nearbyrestauranttext"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/nearbyrestauranttext"
                                    tools:layout_editor_absoluteX="218dp" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/nearbyrestaurant_recyclerview"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="16dp"
                                    android:clipToPadding="false"

                                    android:orientation="horizontal"

                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/nearbyrestauranttext"


                                    />



                <TextView
                    android:id="@+id/bestoffertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:text="Best Offers"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/whatsnew_recyclerview"
                    tools:layout_editor_absoluteX="218dp" />

                <TextView
                    android:id="@+id/bestoffer_seemoretext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"

                    android:text="See more"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/bestoffertext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bestoffertext"
                    tools:layout_editor_absoluteX="218dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bestoffer_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"

                    android:orientation="horizontal"

                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bestoffertext"


                    />



                <TextView
                    android:id="@+id/moto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_font1_bold"



                    android:layout_marginTop="20dp"


                    android:text="Quick , Safe and Yummy "

                    android:textColor="@color/appPrimaryColour"
                    android:textSize="35sp"


                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nearbyrestaurant_recyclerview" />
                <ImageView
                    android:id="@+id/endgif"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:paddingHorizontal="5dp"
                    android:src="@drawable/app_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/moto"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    />





            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>