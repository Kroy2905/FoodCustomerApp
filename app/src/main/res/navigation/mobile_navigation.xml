<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.foodApp.customerapp.ui.Fragments.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.foodApp.customerapp.ui.Fragments.profile.profileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.foodApp.customerapp.ui.Fragments.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings"
        />

    <fragment
        android:id="@+id/navigation_grab"
        android:name="com.foodApp.customerapp.ui.Fragments.grabs.GrabFragment"
        android:label="@string/title_grab"
        tools:layout="@layout/fragment_grab"
        />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.foodApp.customerapp.ui.Fragments.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>